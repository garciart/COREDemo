@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DOB"></label>
                <input asp-for="Input.DOB" class="form-control" />
                <span asp-validation-for="Input.DOB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.StreetAddress"></label>
                <input asp-for="Input.StreetAddress" class="form-control" />
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.City"></label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.State"></label>
                <input asp-for="Input.State" class="form-control" />
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ZipCode"></label>
                <input asp-for="Input.ZipCode" class="form-control" />
                <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SSN"></label>
                <input asp-for="Input.SSN" class="form-control" />
                <span asp-validation-for="Input.SSN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.InsCompany"></label>
                <input asp-for="Input.InsCompany" class="form-control" />
                <span asp-validation-for="Input.InsCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.InsPolicyNo"></label>
                <input asp-for="Input.InsPolicyNo" class="form-control" />
                <span asp-validation-for="Input.InsPolicyNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Doctor"></label>
                <input asp-for="Input.Doctor" class="form-control" />
                <span asp-validation-for="Input.Doctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DoctorPhone"></label>
                <input asp-for="Input.DoctorPhone" class="form-control" />
                <span asp-validation-for="Input.DoctorPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.AdditionalInfo"></label>
                <input asp-for="Input.AdditionalInfo" class="form-control" />
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}